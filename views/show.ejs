<%- include('partials/header.ejs') %>

<% result.forEach((blog)=>{ %>
    <section id="show">
        <div class="inside">
            <div class="image">
                <img src="<%= blog.img_url %>" alt="">
            </div>
            <div class="contents">
                <div class="title"><%= blog.title %></div>
                <p class="description">
                    <%= blog.description %>
                </p>
                <div class="show-btn">
                    <a class="delete-btn"href="/delete/<%= blog.id%> ">Delete</a>
                    <a class="edit-btn" href="/edit/<%= blog.id %>">Edit</a>
                </div>
             
            </div>
        </div>
    </section>
    <%});%>




<%- include('partials/footer.ejs') %>